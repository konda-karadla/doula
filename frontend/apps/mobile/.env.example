# Mobile App Environment Variables
# Copy this file to .env.local and update with your values
# .env.local is gitignored and will NOT be committed

# API Configuration
# IMPORTANT: Use your computer's IP address (not localhost) for physical device/emulator
# Find your IP: Run 'ipconfig' (Windows) or 'ifconfig' (Mac/Linux)
API_BASE_URL=http://192.168.1.XXX:3002
API_TIMEOUT=30000

# App Configuration
APP_NAME=Health Platform Mobile
APP_VERSION=1.0.0
NODE_ENV=development

# Feature Flags
ENABLE_OFFLINE_MODE=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_BIOMETRIC_AUTH=true
ENABLE_DEBUG_MODE=true

# Production Example (not for local dev):
# API_BASE_URL=https://api.yourdomain.com
# NODE_ENV=production
# ENABLE_DEBUG_MODE=false

